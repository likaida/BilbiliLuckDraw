<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aceli.bilibililuckdraw">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".LuckDrawApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launch"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BilibiliLuckDraw">
        <activity android:name=".activity.TestActivity" />
        <activity android:name=".activity.TestViewModelActivity" />
        <activity android:name=".activity.TestAddWordActivity" />
        <activity
            android:name=".activity.MainActivity"
            android:exported="true"
            android:theme="@style/Transparent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>