<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/inputVideoId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/screen_margin_left_right"
            android:layout_marginTop="@dimen/screen_margin_top_bottom"
            android:layout_marginEnd="@dimen/screen_margin_left_right"
            android:gravity="center"
            android:hint="Video ID"
            android:inputType="textVisiblePassword"
            android:text="BV1vQ4y1D7KJ"
            android:textSize="20dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/inputVideoId" />

        <RelativeLayout
            android:id="@+id/mDataBottomBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mCreateData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/screen_margin_top_bottom"
                android:layout_marginBottom="@dimen/screen_margin_top_bottom"
                android:layout_toStartOf="@+id/mCenterLine"
                android:background="@drawable/shape_tv_bg"
                android:elevation="8dp"
                android:padding="@dimen/icon_padding"
                android:text="Create Data"
                android:textColor="@color/color_222"
                app:drawableTopCompat="@mipmap/round_assignment_black_24" />

            <View
                android:id="@+id/mCenterLine"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/widget_margin"
                android:layout_marginEnd="@dimen/widget_margin" />

            <TextView
                android:id="@+id/mInjectData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/screen_margin_top_bottom"
                android:layout_marginBottom="@dimen/screen_margin_top_bottom"
                android:layout_toEndOf="@+id/mCenterLine"
                android:background="@drawable/shape_tv_bg"
                android:elevation="8dp"
                android:padding="@dimen/icon_padding"
                android:text="Inject Data"
                android:textColor="@color/color_222"
                app:drawableTopCompat="@mipmap/round_assignment_turned_in_black_24" />

            <LinearLayout
                android:id="@+id/mRepeatComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="18dp"
                android:background="@drawable/shape_tv_bg"
                android:elevation="3dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/mSuccessNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#4CAF50" />

                <TextView
                    android:id="@+id/mRepeatNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#FF5722" />


            </LinearLayout>

        </RelativeLayout>

        <com.victor.loading.rotate.RotateLoading
            android:id="@+id/mLoading"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            app:loading_color="@color/app_color"
            app:loading_width="5dp" />

    </RelativeLayout>
</layout>