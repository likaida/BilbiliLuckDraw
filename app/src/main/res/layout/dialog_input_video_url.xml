<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/mContentView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rect_tl20_tr20_ffffff"
        android:orientation="vertical">


        <EditText
            android:id="@+id/et_input_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/shape_rect_20_f0f0f0"
            android:gravity="top"
            android:hint="Input Url Like https://www.B.com/video/X"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="1"
            android:minHeight="20dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:scrollbars="none"
            android:textColor="#FF333333"
            android:textColorHint="@color/color_000000_alpha15"
            android:textSize="14dp"
            tools:ignore="InvalidImeActionId" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f0f0f0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mTestBtn"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:layout_marginEnd="30dp"
                android:background="@drawable/shape_rect_100_ffffff"
                android:elevation="5dp"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="test" />

            <TextView
                android:id="@+id/confirm_btn"
                android:layout_width="50dp"
                android:layout_height="28dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_rect_100_ffffff"
                android:elevation="2dp"
                android:gravity="center"
                android:text="Add"
                android:textColor="@color/color_000000_alpha15"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
